{
  "skin": {
    "name": "Crix Runner",
    "author": "crix",
    "version": "1.0.0"
  },
  "window": {
    "width": 1100,
    "height": 800,
    "resizable": false
  },
  "assets": {
    "background": "images/background.png",
    "picker_normal": "images/picker_normal.png",
    "picker_hover": "images/picker_hover.png",
    "picker_btn_normal": "images/picker_btn_normal.png",
    "picker_btn_hover": "images/picker_btn_hover.png",
    "scrollbar_track": "images/scrollbar_track.png",
    "scrollbar_thumb": "images/scrollbar_thumb.png",
    "item_normal": "images/item_normal.png",
    "item_hover": "images/item_hover.png",
    "item_selected": "images/item_selected.png",
    "detail_panel": "images/detail_panel.png",
    "run_btn_normal": "images/run_btn_normal.png",
    "run_btn_hover": "images/run_btn_hover.png",
    "run_btn_pressed": "images/run_btn_pressed.png"
  },
  "parts": [
    {
      "id": "background",
      "type": "image",
      "asset": "background",
      "x": 0,
      "y": 0,
      "width": 1100,
      "height": 800,
      "z": 0
    },
    {
      "id": "title",
      "type": "static_text",
      "x": 16,
      "y": 16,
      "width": 1068,
      "height": 40,
      "z": 1,
      "content": "Crix App Runner",
      "font_size": 24.0,
      "text_color": "0xFFFFFF",
      "text_align": "center"
    },
    {
      "id": "file_picker",
      "type": "file_picker",
      "x": 16,
      "y": 70,
      "width": 520,
      "height": 714,
      "z": 1,
      "filter": ".crix",
      "text_color": "0xDDDDDD",
      "padding": 12,
      "binding": "selected_app",
      "on_select": "load_app_info",
      "file_picker_draw": {
        "picker_normal": "picker_normal",
        "picker_hover": "picker_hover",
        "picker_btn_normal": "picker_btn_normal",
        "picker_btn_hover": "picker_btn_hover",
        "track": "scrollbar_track",
        "thumb": "scrollbar_thumb",
        "item_normal": "item_normal",
        "item_hover": "item_hover",
        "item_selected": "item_selected"
      }
    },
    {
      "id": "detail_panel",
      "type": "image",
      "asset": "detail_panel",
      "x": 552,
      "y": 70,
      "width": 532,
      "height": 660,
      "z": 1
    },
    {
      "id": "label_name",
      "type": "static_text",
      "x": 572,
      "y": 90,
      "width": 100,
      "height": 28,
      "z": 2,
      "content": "Name:",
      "font_size": 16.0,
      "text_color": "0x888888",
      "text_align": "left"
    },
    {
      "id": "value_name",
      "type": "static_text",
      "x": 572,
      "y": 118,
      "width": 492,
      "height": 32,
      "z": 2,
      "content": "",
      "font_size": 20.0,
      "text_color": "0xFFFFFF",
      "text_align": "left",
      "binding": "app_name"
    },
    {
      "id": "label_version",
      "type": "static_text",
      "x": 572,
      "y": 166,
      "width": 100,
      "height": 28,
      "z": 2,
      "content": "Version:",
      "font_size": 16.0,
      "text_color": "0x888888",
      "text_align": "left"
    },
    {
      "id": "value_version",
      "type": "static_text",
      "x": 572,
      "y": 194,
      "width": 492,
      "height": 28,
      "z": 2,
      "content": "",
      "font_size": 16.0,
      "text_color": "0xDDDDDD",
      "text_align": "left",
      "binding": "app_version"
    },
    {
      "id": "label_author",
      "type": "static_text",
      "x": 572,
      "y": 238,
      "width": 100,
      "height": 28,
      "z": 2,
      "content": "Author:",
      "font_size": 16.0,
      "text_color": "0x888888",
      "text_align": "left"
    },
    {
      "id": "value_author",
      "type": "static_text",
      "x": 572,
      "y": 266,
      "width": 492,
      "height": 28,
      "z": 2,
      "content": "",
      "font_size": 16.0,
      "text_color": "0xDDDDDD",
      "text_align": "left",
      "binding": "app_author"
    },
    {
      "id": "label_description",
      "type": "static_text",
      "x": 572,
      "y": 310,
      "width": 100,
      "height": 28,
      "z": 2,
      "content": "Description:",
      "font_size": 16.0,
      "text_color": "0x888888",
      "text_align": "left"
    },
    {
      "id": "value_description",
      "type": "static_text",
      "x": 572,
      "y": 338,
      "width": 492,
      "height": 120,
      "z": 2,
      "content": "",
      "font_size": 16.0,
      "text_color": "0xDDDDDD",
      "text_align": "left",
      "binding": "app_description"
    },
    {
      "id": "run_button",
      "type": "button",
      "x": 900,
      "y": 740,
      "width": 160,
      "height": 44,
      "z": 2,
      "action": "launch_selected_app",
      "draw": {
        "normal": "run_btn_normal",
        "hover": "run_btn_hover",
        "pressed": "run_btn_pressed"
      }
    }
  ]
}
