{
  "skin": {
    "name": "Blend Calculator",
    "author": "choneface",
    "version": "0.1"
  },
  "window": {
    "width": 842,
    "height": 1192,
    "resizable": false
  },
  "assets": {
    "background": "images/background.png",
    "play_normal": "images/play_normal.png",
    "play_hover": "images/play_hover.png",
    "play_pressed": "images/play_pressed.png",
    "input_normal": "images/input_normal.png",
    "input_hover": "images/input_hover.png",
    "input_focused": "images/input_focused.png",
    "input_invalid": "images/input_invalid.png",
    "calc_normal": "images/calc_normal.png",
    "calc_hover": "images/calc_hover.png",
    "calc_pressed": "images/calc_pressed.png",
    "checkbox_unchecked": "images/checkbox_unchecked.png",
    "checkbox_checked": "images/checkbox_checked.png"
  },
  "parts": [
    {
      "id": "background",
      "type": "image",
      "asset": "background",
      "x": 0,
      "y": 0,
      "width": 842,
      "height": 1192,
      "z": 0
    },
    {
      "id": "title",
      "type": "static_text",
      "x": 0,
      "y": 20,
      "width": 842,
      "height": 100,
      "z": 10,
      "content": "blend85",
      "font_size": 80.0,
      "text_color": "0xFFFFFF",
      "text_align": "center",
      "vertical_align": "center"
    },
    {
      "id": "imperial_checkbox",
      "type": "checkbox",
      "x": 700,
      "y": 140,
      "width": 120,
      "height": 24,
      "z": 10,
      "label": "Imperial",
      "text_color": "0xFFFFFF",
      "font_size": 18.0,
      "padding": 8,
      "binding": "settings.imperial",
      "action": "handle_imperial_toggle",
      "checkbox_draw": {
        "unchecked": "checkbox_unchecked",
        "checked": "checkbox_checked"
      }
    },
    {
      "id": "current_ethanol_label",
      "type": "static_text",
      "x": 20,
      "y": 140,
      "width": 520,
      "height": 30,
      "z": 10,
      "content": "Current Ethanol %",
      "font_size": 24.0,
      "text_color": "0xFFFFFF",
      "text_align": "left"
    },
    {
      "id": "current_ethanol_input",
      "type": "text_input",
      "x": 20,
      "y": 175,
      "width": 520,
      "height": 60,
      "font_size": 52.0,
      "max_length": 3,
      "validation": "0123456789",
      "z": 10,
      "binding": "inputs.current_ethanol_pct",
      "text_color": "0x000000",
      "padding": 4,
      "text_input_draw": {
        "normal": "input_normal",
        "hover": "input_hover",
        "focused": "input_focused",
        "invalid": "input_invalid"
      },
      "hit": {
        "type": "rect"
      }
    },
    {
      "id": "target_ethanol_label",
      "type": "static_text",
      "x": 20,
      "y": 255,
      "width": 520,
      "height": 30,
      "z": 10,
      "content": "Target Ethanol %",
      "font_size": 24.0,
      "text_color": "0xFFFFFF",
      "text_align": "left"
    },
    {
      "id": "target_ethanol_input",
      "type": "text_input",
      "x": 20,
      "y": 290,
      "width": 520,
      "height": 60,
      "font_size": 52.0,
      "max_length": 3,
      "validation": "0123456789",
      "z": 10,
      "binding": "inputs.target_ethanol_pct",
      "text_color": "0x000000",
      "padding": 4,
      "text_input_draw": {
        "normal": "input_normal",
        "hover": "input_hover",
        "focused": "input_focused",
        "invalid": "input_invalid"
      },
      "hit": {
        "type": "rect"
      }
    },
    {
      "id": "current_fuel_label",
      "type": "static_text",
      "x": 20,
      "y": 370,
      "width": 520,
      "height": 30,
      "z": 10,
      "content": "Current Fuel (liters)",
      "font_size": 24.0,
      "text_color": "0xFFFFFF",
      "text_align": "left",
      "binding": "labels.fuel_unit"
    },
    {
      "id": "current_fuel_input",
      "type": "text_input",
      "x": 20,
      "y": 405,
      "width": 520,
      "height": 60,
      "font_size": 52.0,
      "max_length": 5,
      "validation": "0123456789.",
      "z": 10,
      "binding": "inputs.current_fuel_liters",
      "text_color": "0x000000",
      "padding": 4,
      "text_input_draw": {
        "normal": "input_normal",
        "hover": "input_hover",
        "focused": "input_focused",
        "invalid": "input_invalid"
      },
      "hit": {
        "type": "rect"
      }
    },
    {
      "id": "calculate_button",
      "type": "button",
      "x": 20,
      "y": 500,
      "width": 80,
      "height": 24,
      "z": 10,
      "action": "calculate_blend",
      "draw": {
        "normal": "calc_normal",
        "hover": "calc_hover",
        "pressed": "calc_pressed"
      },
      "hit": {
        "type": "rect"
      }
    },
    {
      "id": "result_label",
      "type": "static_text",
      "x": 20,
      "y": 560,
      "width": 520,
      "height": 30,
      "z": 10,
      "content": "E85 to Add (liters)",
      "font_size": 24.0,
      "text_color": "0xFFFFFF",
      "text_align": "left",
      "binding": "labels.result_unit"
    },
    {
      "id": "result_output",
      "type": "static_text",
      "x": 20,
      "y": 595,
      "width": 520,
      "height": 80,
      "z": 10,
      "content": "---",
      "font_size": 64.0,
      "text_color": "0x00FF00",
      "text_align": "left",
      "binding": "outputs.e85_to_add_liters"
    }
  ]
}
