{
  "skin": {
    "name": "Demo Skinned Application",
    "author": "choneface",
    "version": "0.1"
  },
  "window": {
    "width": 842,
    "height": 1192,
    "resizable": false
  },
  "assets": {
    "background": "images/background.png",
    "play_normal": "images/play_normal.png",
    "play_hover": "images/play_hover.png",
    "play_pressed": "images/play_pressed.png",
    "input_normal": "images/input_normal.png",
    "input_hover": "images/input_hover.png",
    "input_focused": "images/input_focused.png",
    "input_invalid": "images/input_invalid.png",
    "calc_normal": "images/calc_normal.png",
    "calc_hover": "images/calc_hover.png",
    "calc_pressed": "images/calc_pressed.png"
  },
  "parts": [
    {
      "id": "background",
      "type": "image",
      "asset": "background",
      "x": 0,
      "y": 0,
      "width": 842,
      "height": 1192,
      "z": 0
    },
    {
      "id": "title",
      "type": "static_text",
      "x": 0,
      "y": 20,
      "width": 842,
      "height": 100,
      "z": 10,
      "content": "blend85",
      "font_size": 80.0,
      "text_color": "0xFFFFFF",
      "text_align": "center",
      "vertical_align": "center"
    },
    {
      "id": "value_a",
      "type": "text_input",
      "x": 20,
      "y": 140,
      "width": 520,
      "height": 60,
      "font_size": 52.0,
      "max_length": 3,
      "validation": "numeric",
      "z": 10,
      "action": "value_a_changed",
      "text_color": "0x000000",
      "padding": 4,
      "text_input_draw": {
        "normal": "input_normal",
        "hover": "input_hover",
        "focused": "input_focused",
        "invalid": "input_invalid"
      },
      "hit": {
        "type": "rect"
      }
    },
    {
      "id": "value_b",
      "type": "text_input",
      "x": 20,
      "y": 220,
      "width": 520,
      "height": 60,
      "font_size": 52.0,
      "max_length": 3,
      "validation": "numeric",
      "z": 10,
      "action": "value_b_changed",
      "text_color": "0x000000",
      "padding": 4,
      "text_input_draw": {
        "normal": "input_normal",
        "hover": "input_hover",
        "focused": "input_focused",
        "invalid": "input_invalid"
      },
      "hit": {
        "type": "rect"
      }
    },
    {
      "id": "calculate_button",
      "type": "button",
      "x": 110,
      "y": 500,
      "width": 80,
      "height": 24,
      "z": 10,
      "action": "calculate",
      "draw": {
        "normal": "calc_normal",
        "hover": "calc_hover",
        "pressed": "calc_pressed"
      },
      "hit": {
        "type": "rect"
      }
    }
  ]
}
